div.doc{
    top:0;
    bottom: 0;
    
    height: 842px;
    width: 595px;
    /* to centre page on screen*/
    // margin-left: auto;
    // margin-right: auto;
 
  
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    padding:35px;
    background-color: white;
    outline: 0px solid transparent;
}

.editor{
    top:0;
    left:0;
    right:0;
    bottom:0;
    width: 100%;

    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    // align-items: flex-start;
}

.editor-centre-panel{
    min-width: 800px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.editor-left-panel, .editor-right-panel {
    padding: 10px;
    min-width: 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}

.editor-left-panel{
    border-right: solid 1px lightGray;
}

.editor-right-panel{
    border-left: solid 1px lightGray;
}

