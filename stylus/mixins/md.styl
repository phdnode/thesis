.doc-ribbon {
  width: 100%;
  height: 40vh;
  background-color: #3F51B5;
  flex-shrink: 0;
}

.doc-main {
  margin-top: -35vh;
  flex-shrink: 0;
}

.doc-header .mdl-layout__header-row {
  padding-left: 40px;
}

.doc-container {
  max-width: 1600px;
  width: calc(100% - 16px);
  margin: 0 auto;
}

.doc-content {
  border-radius: 2px;
  padding: 80px 56px;
  margin-bottom: 80px;
}

.doc-layout.is-small-screen .doc-content {
  padding: 40px 28px;
}

.doc-content h3 {
  margin-top: 48px;
}

.doc-footer {
  padding-left: 40px;
}

.doc-footer .mdl-mini-footer--link-list a {
  font-size: 13px;
}